{
    "type":"object",
    "$schema": "http://https://github.com/psi-proxi/schemas/mzGraph/SpectrumSchema.json",
    "id": "Spectrum",
    "required":false,
    "properties":{
        "spectrumID": {
            "type":"string",
            "id": "Spectrum/spectrumID",
            "required":true
        },
        "precursorCharge":{
            "type":"int",
            "id":"Spectrum/precursorCharge",
            "required":false
        },
        "msLevel":{
            "type":"int",
            "id":"Spectrum/msLevel",
            "required":false
        },
        "precursorMass":{
            "type":"double",
            "id":"Spectrum/precursorMass",
            "required":false
        },
        "precursorIntensity":{
            "type":"double",
            "id":"Spectrum/precursorIntensity",
            "required":false
        },
        "fragmentationType":{
            "type":"string",
            "id":"Spectrum/fragmentationType",
            "required":false
        },
        "retentionWindow":{
            "type":"string",
            "id":"Spectrum/retentionWindow",
            "required":false
        },
        "peaks": {
            "type":"array",
            "id": "Spectrum/peaks",
            "required":false,
            "items":{
                "type":"object",
                "id": "Spectrum/peaks/peak",
                "required":false,
                "properties":{
                    "mass": {
                        "type":"double",
                        "id": "Spectrum/peaks/peak/mass",
                        "required":true
                    },
                    "intensity":{
                        "type":"double",
                        "id":"Spectrum/peaks/peak/intensity",
                        "required":true
                    }
                }
            }
        },

        "additional":{
            "type":"array",
            "id":"Spectrum/additional",
            "required":false,
            "items":{
                "type":{"http://https://github.com/psi-proxi/schemas/common/OntologySchema.json":"#OntologyTerm"},
                "required":true
            }
        }
    }
}