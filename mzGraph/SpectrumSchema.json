    "required":false,
    "properties":{
        "spectrumID": {
            "type":"string",
            "id": "SpectrumSchema.json/spectrumID",
            "required":true
        },
        "precursorCharge":{
            "type":"int",
            "id":"SpectrumSchema.json/precursorCharge",
            "required":false
        },
        "msLevel":{
            "type":"int",
            "id":"SpectrumSchema.json/msLevel",
            "required":false
        },
        "precursorMass":{
            "type":"double",
            "id":"SpectrumSchema.json/precursorMass",
            "required":false
        },
        "precursorIntensity":{
            "type":"double",
            "id":"SpectrumSchema.json/precursorIntensity",
            "required":false
        },
        "fragmentationType":{
            "type":"string",
            "id":"SpectrumSchema.json/fragmentationType",
            "required":false
        },
        "retentionWindow":{
            "type":"string",
            "id":"SpectrumSchema.json/retentionWindow",
